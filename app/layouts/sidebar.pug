aside.sidebar
    .sidebar__form
      input.sidebar__input(type="text", placeholder="Search")
      i.sidebar__icon.fas.fa-search.fa-flip-horizontal.fa-lg  
    .sidebar__devider
    nav.sidebar__nav
      header.sidebar__header
        h2.sidebar__heading Menu
      ul.sidebar__menu
        each item in menuItems
          li.sidebar__menu-item
            if !item.elements
              a.sidebar__menu-link(href="#")= item.label
            else
              span.sidebar__menu-link= item.label
                i.sidebar__menu-link-icon.fas.fa-chevron-down
              ul.sidebar__submenu
                for ele in item.elements
                  li.sidebar__submenu-item
                    a.sidebar__submenu-link(href="#")= ele
    .sidebar__devider
    .sidebar__trend
      h2.sidebar__heading Trends
      each card in trendCards
        +sidebarCard(card.caption, card.src)
      +button('More')
